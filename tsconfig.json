{
  "compilerOptions": {
    /* La carpeta /src es ahora la raíz lógica de los imports */
    "baseUrl": "./src",

    /* Opciones estándar de Next/TypeScript */
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [{ "name": "next" }],

    /* Aliases relativos a /src */
    "paths": {
      "@/*":            ["*"],
      "@/features/*":   ["features/*"],
      "@/shared/*":     ["shared/*"],
      "@/lib/*":        ["lib/*"],
      "@/core/*":       ["core/*"],
      "@/config/*":     ["config/*"],
      "@/server/*":     ["server/*"]
    }
  },

  /* Hace que el análisis de TS comience dentro de /src */
  "include": [
    "next-env.d.ts",
    "src/**/*.{ts,tsx}",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
